{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": ".",
          "files": [
            "Sharpie/*.csproj"
          ]
        }
    ],
    "dest": "artifacts/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
        "**/*.md",
        "**/LICENSE",
        "**/media/**"
        ],
        "exclude": [
        "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "statictoc"
    ],
    "globalMetadata": {
    "_appName": "Sharpie",
    "_appTitle": "Sharpie",
      "_enableSearch": true,
      "pdf": false
    }
  }
}