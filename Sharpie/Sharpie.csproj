<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>sharpie</AssemblyName>
        <Title>A Curses-based terminal manipulation library.</Title>
        <Description>A Curses-based terminal manipulation library for modern .NET frameworks. This library wraps the Ncurses library found on most platforms and adds a .NET-style layer on top of it.</Description>
        <Copyright>Alexandru Ciobanu</Copyright>
        <PackageProjectUrl>https://github.com/pavkam/sharpie/</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/pavkam/sharpie/blob/main/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/pavkam/sharpie.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>ncurses curses terminal console</PackageTags>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <PackageVersion>1.3.0</PackageVersion>
        <AssemblyVersion>1.3.0</AssemblyVersion>
        <FileVersion>1.3.0</FileVersion>
        <PackageId>Sharpie-Curses</PackageId>
        <PackageIcon>logo-128.png</PackageIcon>
        <LangVersion>11</LangVersion>
        <Authors>Alexandru Ciobanu</Authors>
    </PropertyGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="$(AssemblyName)-tests" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="JetBrains.Annotations" Version="2022.3.1" />
        <PackageReference Include="Nito.AsyncEx.Context" Version="5.1.2" />
        <PackageReference Include="System.Diagnostics.Debug" Version="4.3.0" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\media\logo-128.png">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
            <Link>logo-128.png</Link>
        </None>
    </ItemGroup>

</Project>
